= form_for @field_trip, :html => {:role => 'form'} do |f|
  - if @field_trip.errors.any?
    #error_explanation
      %h2
        = pluralize(@field_trip.errors.count, "error")
        prohibited this field_trip from being saved:
      %ul
        - @field_trip.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :name
    = f.text_field :name, autofocus: true, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'
    = f.hidden_field :company_id, current_employee.company_id
  .actions
    = f.submit "Next - Events", class: 'pull-right'
